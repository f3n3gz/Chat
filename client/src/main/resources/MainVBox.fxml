<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" prefHeight="300.0" prefWidth="500.0"
      xmlns="http://javafx.com/javafx"
      fx:controller="com.geekbrains.client.ControllerMainVBox"
      stylesheets="@MainVBoxStyle.css"
      style="-fx-background-color: transparent">
    <Button fx:id="buttonSwitchPanels" minHeight="20" minWidth="100" text="connect to server"
            onAction="#connectToServer"/>
    <TextArea fx:id="chatHistory" editable="false"
              wrapText="true"
              VBox.vgrow="ALWAYS"/>
    <HBox alignment="BOTTOM_LEFT">
        <TextField fx:id="textFieldInput" minHeight="25" promptText="Введите текст"
                   HBox.hgrow="ALWAYS" onKeyPressed="#textFieldKey"/>
        <Button fx:id="buttonEnter" alignment="CENTER" minHeight="20" minWidth="100"
                text="Отправить" onAction="#addToChatHistory"/>
    </HBox>

</VBox>
